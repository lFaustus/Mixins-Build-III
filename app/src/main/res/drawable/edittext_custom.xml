<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <!--solid
                android:color="@color/half_black" /-->

            <stroke
                android:width="1dp"
                android:color="@color/half_black"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="@color/material_gray"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="5dp"/>
        </shape>
    </item>


</selector>