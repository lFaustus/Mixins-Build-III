<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="@color/pink_pressed" />

            <stroke
                android:width="1dp"
                android:color="@color/pink"/>

            <padding1
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

            <corners android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="1dp"
                android:color="@color/pink"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:topLeftRadius="4dp"
                android:bottomLeftRadius="4dp"/>
        </shape>
    </item>


</selector>