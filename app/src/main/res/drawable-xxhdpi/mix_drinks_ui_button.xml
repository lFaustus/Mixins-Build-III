<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B2FF6F00" />

            <stroke
                android:width="1dp"
                android:color="#B2FF5722"/>

            <padding1
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

            <corners android:topRightRadius="4dp"
                android:bottomRightRadius="4dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <!--solid android:color="#00000000"/-->
            <stroke
                android:width="1dp"
                android:color="#B2FF5722"/>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:topRightRadius="4dp"
                android:bottomRightRadius="4dp"/>
        </shape>
    </item>


</selector>