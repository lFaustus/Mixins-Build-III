<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="5dp"
    android:tag="cardviewsearch"
    >
    <!--android:background="@android:color/transparent"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <include android:id="@+id/search_field"
        layout="@layout/rounded_edittext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
        <!--SearchView
            android:id="@+id/search_field"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/searchview_custom"
            android:queryHint="Search Cocktail"/-->
    <com.fluxinated.mixins.customviews.PlayFontButton
        android:id="@+id/search_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="X"
        style="@style/close_search_button"
        android:layout_gravity="center|end"
        android:layout_toEndOf="@+id/search_field"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>